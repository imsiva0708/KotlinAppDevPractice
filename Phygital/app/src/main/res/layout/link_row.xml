<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linkRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F3F3F3"
    android:padding="8dp"
    android:layout_marginTop="8dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tvLinkUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="https://example.com"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLinkDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description of link"
        android:textColor="#333333"
        android:layout_marginTop="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <ImageButton
            android:id="@+id/btnEditLink"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:background="@null"
            android:contentDescription="Edit link"
            app:tint="@android:color/holo_blue_dark" />

        <ImageButton
            android:id="@+id/btnDeleteLink"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            android:background="@null"
            android:layout_marginStart="8dp"
            android:contentDescription="Delete link"
            app:tint="@android:color/holo_red_dark" />
    </LinearLayout>

</LinearLayout>
